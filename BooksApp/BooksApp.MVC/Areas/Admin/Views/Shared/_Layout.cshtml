        <ul class="sidebar-nav" id="sidebar-nav">

            @await Html.PartialAsync("_MenuPartial")

        </ul>

    </aside><!-- End Sidebar-->

    <main id="main" class="main">
        @if (TempData["Message"] != null)
        {
            AlertMessage msg = JsonConvert.DeserializeObject<AlertMessage>(TempData["Message"] as string);
            <div class="alert alert-dismissible fade show alert-@msg.AlertType pb-0">
                <h5>@msg.Title</h5>
                <p>@msg.Message</p>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @RenderBody()
    </main>


