<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>E-Commers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
          integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Css Kodlarım -->
    <link rel="stylesheet" href="~/css/site.css">
    <!-- Bootstrap kütüphane -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <!-- Navbar -->
    @await Html.PartialAsync("_HeaderPartial")
    <div class="container">
    @RenderBody()
    </div>
    <!-- Footer -->
    @await Html.PartialAsync("_FooterPartial")

    <script>
        const contantimg3 = document.querySelectorAll('.ani')
        window.addEventListener('scroll', checkBoxes4)
        checkBoxes4()

        function checkBoxes4() {
            const triggerBottom = window.innerHeight / 5 * 4
            contantimg3.forEach(animation4 => {
                const animationTop = animation4.getBoundingClientRect().top
                if (animationTop < triggerBottom) {
                    animation4.classList.add('show')
                } else {
                    animation4.classList.remove('show')
                }
            })
        }
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">
    </script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>